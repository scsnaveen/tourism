<div class="container">
<ul class="list-group">
				<% @package.package_places.each do |place|%>
					<li class="list-group-item"><b><%=place%></b></li>
				<%end%>
			</ul>
<%=@package.price%>
<%=form_with(url: packages_conversion_path(:id=>@package.id), method: "post") do |form|%>
	<div id="currency1">
		<%= form.currency_select(:currency,["USD", "EUR", "CAD"], {}, {class: "form-control currency1"}) %>
	</div>
		<p id=result></p>
		<%=form.submit "conversion"%>
	<%end%>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('#currency').change(function() {
		var state = $('.currency1').val();
			$.ajax({
				url: "conversion?id=<%=@package.id%>", 
				type: 'GET',
				data: {
					 "currency": $(".currency1").val()
				 },
				dataType: "json",
				success: function(response){
					var obj = JSON.stringify(response);
					$("#result").html("<b>the conversion value is </b>"+obj)
				}
			 });
		});
	});
	
</script>
