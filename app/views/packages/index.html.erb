<div class="container">
<div class="card-columns">
	<%@packages.all.each do |package|%>
	<div class="card">
		<div class="card-body">
			<p class="card-text">
				<ul class="list-group">
				<% package.package_places.each do |place|%>
					<li class="list-group-item"><b><%=place%></b></li>
				<%end%>
			</ul>
			<br>
			<button type="button" class="btn btn-success float-right"disabled >$<%=package.price%></button>
			<%=link_to "show details",packages_show_path(:id=>package.id),class:"btn btn-info"%>
			</p>
		</div>
	</div>
	<%end%>
</div>
</div>
