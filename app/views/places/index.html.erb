<div class="container">
	<div class="row">  
		<% @places.each do |place|%>
		<div class="card-columns">
		<div class="card p-3">
		<div class="card-header bg-transparent border-success"><%= @place = place.country%></div>
		<div class="card-body">
		<h5 class="card-title"><%= place.place_name%></h5>
		<p class="card-text"><%= place.place_description[0..75]%>
			<%=form_with(url: places_distance_path(:city2=>@place), method: "post") do |form|%>
				<%= form.select :city1,place:CS.cities(:AP,:IN)%>
				<%=form.submit%>
			<%end%>
		</p>
		</div>
		</div>
		</div>
		<%end%>
	</div>
</div>
